<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    xmlns:pages="clr-namespace:MauiApp1.Pages"
    
    Shell.FlyoutBehavior="Flyout"
        
    Title="MauiApp1">

    <FlyoutItem Title="Contact App">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Add Contact">
        <ShellContent ContentTemplate="{DataTemplate pages:AddPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="View Contacts List">
        <ShellContent ContentTemplate="{DataTemplate pages:ListPage}"/>
    </FlyoutItem>

</Shell>
